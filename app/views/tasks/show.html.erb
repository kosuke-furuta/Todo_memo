<h1>メモの詳細</h1>

<div class="d-flex justify-content-end">
  <%= link_to '一覧', tasks_path, class: 'nav-link' %>
</div>
<table class="table table-hover">
  <tbody>
  <tr>
    <th>ID</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @task.name %></td>
  </tr>
  <tr>
    <th>説明</th>
    <td><%= simple_format(h(@task.description),
            {}, sanitize: false, wrapper_tag: "div") %></td>
  </tr>
  <tr>
    <th>作成日時</th>
    <td><%= @task.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>更新日時</th>
    <td><%= @task.updated_at.strftime('%Y/%m/%d') %></td>
  </tr>
  </tbody>
</table>
<%= link_to '編集', edit_task_path, class: 'btn btn-outline-primary' %>
<%= link_to '削除', @task, method: :delete,
                   data: { confirm: "メモ「#{@task.name} 」を削除します。よろしいですか？"},
                   class: 'btn btn-outline-danger' %>
