 <tr class="tbody">
   <td><%= link_to task.id, task %></td>
   <td><%= link_to task.name, task %></td>
   <td><%= link_to task.created_at.strftime('%Y/%m/%d') , task %></td>
   <td><%= link_to '編集', edit_task_path(task), class: 'btn btn-outline-primary' %></td>
   <td><%= link_to '削除', task, method: :delete,
                   data: { confirm: "タスク「#{task.name}」を削除します。よろしいですか？" },
                   class: 'btn btn-outline-danger' %></td>
</tr>
