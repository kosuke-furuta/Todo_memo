<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-sm-12 col-md-6">
      <div class="image">
        <% if @user.image? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag('/images/icon/no-image.png') %>
        <% end %>
      </div>
    </aside>
    <div class="col-md-6">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
        <p>
          <%= @user.email %>
        <p>
      </section>
    </div> 
  </div>
</div>
