<% provide(:title, 'All users') %>
<div class="row">
  <aside class="col-md-4">
  <h2>ログインユーザー</h2>
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <span><%= link_to "プロフィールを見る",
              current_user %></span>
  </aside>
  <div class="col-md-8">
  <h2>ユーザー一覧</h2>
  <ul class="users">
    <%= render @users %>
  </ul>
  <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
