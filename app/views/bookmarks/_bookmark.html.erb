<% if task.bookmarked_by?(current_user) %>
  <%= link_to task_bookmarks_path(task), method: :delete, remote: true do %>
    <i class="fas fa-star"></i>
  <% end %>
<% else %>
  <%= link_to task_bookmarks_path(task), method: :post, remote: true do %>
    <i class="far fa-star"></i>
  <% end %>
<% end %>
