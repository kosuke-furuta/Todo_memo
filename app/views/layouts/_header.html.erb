<header class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Todo Memo App", root_path, id: "logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <%= link_to "ホーム", root_path, class: "nav-link" %><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        <%= link_to "アプリについて", about_path, class: "nav-link" %><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        <%= link_to "ヘルプ", help_path, class: "nav-link" %><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        <%= link_to "問い合わせ", contact_path, class: "nav-link" %><span class="sr-only">(current)</span>
      </li>
      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to "ユーザー", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown link
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "プロフィール", current_user, class: "nav-link" %>
            <%= link_to "プロフィール編集", edit_user_path(current_user), class: "nav-link" %>
            <div class="dropdown-divider"></div>
              <%= link_to "ログアウト", logout_path, class: "nav-link", method: :delete %>
          </div>
        </li>
      <% else %>
        <li><%= link_to "ログイン", login_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </div>
</header>
